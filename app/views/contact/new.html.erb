          <% else %>
          <li class="divider-vertical"></li>  
          <li><%= link_to 'Sign In', login_path %></li>
          <li class="divider-vertical"></li>  
        <li><%= link_to 'Sign Up', new_identity_path %></li>
        <% end %>
    <li class="divider-vertical"></li>    
          <li><%= link_to 'About', static_about_path %></li>
        <li class="divider-vertical"></li>
        <li><%= link_to 'Help', contact_path %></li>
        <li class="divider-vertical"></li>      
