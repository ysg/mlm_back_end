<div class="row-fluid">
  <center><h1>Contact Black Pride Beauty</h1></center>
  <hr class="soften"></hr>
  <div class="span3">&nbsp;</div><div class="span6">
<%= form_for @message, :url => contact_path do |form| %>
  <fieldset class="fields">
    <div class="span3">
    <div class="span3">
      <%= form.text_field :name, placeholder: "Your Name" %>
    </div><br />
    
    <div class="span3">
      <%= form.text_field :email, placeholder: "Your Email" %>
    </div><br />

    <div class="span3">
      <%= form.text_field :subject, placeholder: "Message Subject" %>
    </div><br />
    
    </div>
    <div style="float:right;">
    <div class="span3">
      <%= form.text_area :body, placeholder: "Message" %>
    </div>
  </div>

  </fieldset>
  <div class="span2" style="margin-top:30px;">
  <fieldset class="actions">
    <%= form.submit "Send", class: "btn btn-large btn-info" %>
  </fieldset>
</div>
  
  
<% end %>
</div>
</div>