
<center>
<h1>Reset Password</h1>

<%= form_tag password_resets_path, :method => :post do %>
  <div class="field1">
    <%= text_field_tag :email, params[:email], placeholder: "Enter Your Account Email" %>
  </div>
  <div class="actions1"><%= submit_tag "Reset Password", class: 'btn btn-large btn-info' %></div>
<% end %>
</center>